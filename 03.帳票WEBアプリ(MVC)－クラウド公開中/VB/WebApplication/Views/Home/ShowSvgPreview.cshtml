@using System.Web.Helpers
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>SVG Preview</title>
    <style>
        body { margin: 0; font-family: sans-serif; }
        .navbar {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            padding: 8px;
            background: #f0f0f0;
            border-bottom: 1px solid #ccc;
            position: sticky;
            top: 0;
            z-index: 100;
        }
        .navbar button {
            padding: 4px 12px;
            font-size: 16px;
            cursor: pointer;
        }
        .navbar button:disabled {
            cursor: default;
            opacity: 0.4;
        }
        .navbar input[type="number"] {
            width: 60px;
            text-align: center;
            font-size: 14px;
        }
        #svgContainer {
            display: flex;
            justify-content: center;
            padding: 16px;
        }
        #svgContainer svg {
            box-shadow: 2px 3px 10px rgba(0,0,0,0.35), 0 0 0 1px rgba(0,0,0,0.08);
        }
        .navbar .print-btn {
            font-size: 18px;
            padding: 4px 8px;
            margin-left: 12px;
            cursor: pointer;
            background: none;
            border: 1px solid #aaa;
            border-radius: 4px;
        }
        .navbar .print-btn:hover { background: #ddd; }
        @@media print {
            .navbar { display: none !important; }
            #svgContainer { padding: 0; }
        }
    </style>
</head>
<body>
    <div class="navbar">
        <button id="btnFirst" onclick="goFirst()" title="最初のページ">|&lt;</button>
        <button id="btnPrev" onclick="goPrev()" title="前のページ">&lt;-</button>
        <button id="btnNext" onclick="goNext()" title="次のページ">-&gt;</button>
        <button id="btnLast" onclick="goLast()" title="最終ページ">&gt;|</button>
        <span>表示ページ</span>
        <input type="number" id="pageInput" min="1" value="1"
               onkeydown="if(event.key==='Enter'){goPage(this.value);}" />
        <span id="totalPages"></span>
        <button class="print-btn" onclick="printCurrentPage()" title="クイック印刷（このページを印刷）">&#128269;</button>
        <button class="print-btn" onclick="printAllPages()" title="通常印刷（全ページを印刷）">&#128424;</button>
    </div>
    <div id="svgContainer"></div>

    <script>
        var currentPage = 1;
        var allPages = @ViewBag.AllPages;
        var svgPages = @Html.Raw(Json.Encode(ViewBag.SvgPages));

        document.getElementById('totalPages').textContent = '/ ' + allPages;
        document.getElementById('pageInput').max = allPages;

        function updateButtons() {
            document.getElementById('btnFirst').disabled = (currentPage <= 1);
            document.getElementById('btnPrev').disabled = (currentPage <= 1);
            document.getElementById('btnNext').disabled = (currentPage >= allPages);
            document.getElementById('btnLast').disabled = (currentPage >= allPages);
            document.getElementById('pageInput').value = currentPage;
        }

        function loadPage(page) {
            if (page < 1) page = 1;
            if (page > allPages) page = allPages;
            currentPage = page;
            updateButtons();
            document.getElementById('svgContainer').innerHTML = svgPages[page - 1];
        }

        function goFirst() { loadPage(1); }
        function goPrev() { loadPage(currentPage - 1); }
        function goNext() { loadPage(currentPage + 1); }
        function goLast() { loadPage(allPages); }
        function goPage(p) { loadPage(parseInt(p) || 1); }

        // クイック印刷: 現在表示中のページだけ印刷
        function printCurrentPage() {
            window.print();
        }

        // 通常印刷: 全ページのSVGを印刷
        function printAllPages() {
            var w = window.open('', '_blank');
            w.document.write('<html><head><title>印刷<\/title>');
            w.document.write('<style>body{margin:0;} svg{page-break-after:always; display:block; margin:0 auto;} svg:last-child{page-break-after:auto;}<\/style>');
            w.document.write('<\/head><body>');
            w.document.write(svgPages.join(''));
            w.document.write('<\/body><\/html>');
            w.document.close();
            setTimeout(function() { w.print(); }, 300);
        }

        loadPage(1);
    </script>
</body>
</html>
